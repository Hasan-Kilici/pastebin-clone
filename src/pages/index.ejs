<body class="body">
  <div class="container">
    <br><br>
    <h4>New Text</h4>
    <hr><br>
    <div class="card">
      <div class="card-body">
        <form method="POST" action="/new/text">
          <div class="row">
            <div class="col-md-4">
              <h4>Author</h4>
              <input type="text" id="user" name="user" class="form-control" required>
            </div>
              <div class="col-md-4">
              <h4>Title</h4>
              <input type="text" id="title" name="title" class="form-control" required>
            </div>
            <div class="col-md-4">
              <h4>Author</h4>
              <select type="text" id="lang" name="lang" class="form-control" required>
                <option value="JS">JavaScript</option>
                <option value="GoLang">GO Lang</option>
                <option value="DartLang">Dart Lang</option> 
                <option value="python">Python</option>
                <option value="C">C</option>
                <option value="c#">C#</option>
                <option value="C++">C++</option>
                <option value="PHP">PHP</option>
                <option value="Ruby">Ruby</option>
                <option value="rust">Rust</option>
                <option value="Lua">Lua</option>
                <option value="Bash">Bash</option>
              </select>
            </div>
          </div>
          <h4>Your paste - Paste your paste here</h4>
          <textarea id="text" name="text" class="form-control col-12"></textarea>
          <br>
          <input class="btn btn-dark" type="submit">
        </form>
      </div>
    </div>
  </div>
</body>
